<%= javascript_pack_tag 'evaluation/races/show' %>
<%= stylesheet_pack_tag 'evaluation/races/show' %>

<div class='col-lg-12 card text-dark bg-light'>
  <div class='card-body table-responsive'>
    <h4 class='card-title table-title'>テストデータ - <%= @evaluation_race.race_name %></h4>

    <div class='form-check form-switch mb-2'>
      <%= check_box_tag :normalize, true, false, class: 'form-check-input' %>
      <%= label_tag :normalize, '正規化' %>
    </div>


    <table id='table-evaluation-race' class='table table-hover text-nowrap'>
      <thead class='table-dark'>
        <% Denebola::Feature::NAMES.each do |feature_name| %>
          <th><%= feature_name %></th>
        <% end %>
      </thead>
      <tbody>
        <%= render @evaluation_race.test_data.sort_by(&:number) %>
      </tbody>
    </table>
  </div>
</div>
