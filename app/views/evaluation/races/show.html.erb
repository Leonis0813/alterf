<div class='col-lg-12 card text-dark bg-light'>
  <div class='card-body table-responsive'>
    <h4 class='card-title table-title'>テストデータ</h4>

    <table id='table-evaluation-race' class='table table-hover text-nowrap'>
      <thead>
        <% Denebola::Feature::NAMES.each do |feature_name| %>
          <th><%= feature_name %></th>
        <% end %>
      </thead>
      <tbody>
        <%= render @evaluation_race.test_data.sort_by(&:number) %>
      </tbody>
    </table>
  </div>
</div>
