<%= javascript_pack_tag 'evaluation/races/show' %>
<%= stylesheet_pack_tag 'evaluation/races/show' %>

<h4 class='table-title mb-3'>テストデータ - <%= @evaluation_race.race_name %></h4>

<ul class='nav nav-tabs' style='border-bottom: 0px'>
  <li class='nav-item active'>
    <%= button_tag '生データ', {id: 'tab-raw-data'}.merge(tab_params('raw-data', true)) %>
  </li>
  <li class='nav-item active'>
    <%= button_tag '特徴量', {id: 'tab-feature'}.merge(tab_params('feature', false)) %>
  </li>
</ul>

<div class='tab-content'>
  <div id='raw-data' class='card text-dark bg-light tab-pane active'>
    <div class='card-body table-responsive'>
      <table id='table-evaluation-race-raw-data' class='table table-hover'>
        <thead class='table-dark'>
          <% Denebola::Feature::NAMES.each do |feature_name| %>
            <th class='<%= feature_name %>'><%= feature_name %></th>
          <% end %>
        </thead>
        <tbody>
          <%= render @evaluation_race.test_data.sort_by(&:order) %>
        </tbody>
      </table>
    </div>
  </div>

  <div id='feature' class='card text-dark bg-light tab-pane'>
    <div class='card-body table-responsive'>
      <table id='table-evaluation-race-feature' class='table table-hover'>
        <thead class='table-dark'>
          <% Denebola::Feature::NAMES.each do |feature_name| %>
            <th class='<%= feature_name %>'><%= feature_name %></th>
          <% end %>
        </thead>
        <tbody>
          <%= render @evaluation_race.test_data.sort_by(&:order) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
