<div class='col-lg-12 well'>
  <h3 class='table-title'>評価結果詳細</h3>

  <svg id='performance'></svg>

  <table class='table table-hover'>
    <thead>
      <th width='10%'>No</th>
      <th width='30%'>レース名</th>
      <th width='50%'>予測結果</th>
      <th width='10%'>正解</th>
    </thead>
    <tbody>
      <%= render @evaluation.data %>
    </tbody>
  </table>
</div>

<script>
  <% values = [
      @evaluation.f_measure,
      @evaluation.specificity,
      @evaluation.recall,
      @evaluation.precision,
  ] %>
  $(document).ready(function() {
    result = new EvaluationResult();
    result.drawPerformance(<%= values %>);
  });
</script>
